{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 450,
    "data": {
      "url": "https://raw.githubusercontent.com/Syedfakhir03/Week-10_HW-/refs/heads/main/Data/Onemore_bubble.csv",
      "format": {
        "type": "csv"
      }
    },
    "mark": {
      "type": "circle",
      "opacity": 0.6,
      "stroke": "black",
      "strokeWidth": 0.6
    },
    "encoding": {
      "x": {
        "field": "GDP",
        "type": "quantitative",
        "title": "GDP per Capita(log)",
        "scale": {"type": "log", "domain": [675, 125000]},
        "axis": {"tickCount": 20}
      },
      "y": {
        "field": "Meat",
        "type": "quantitative",
        "title": "Meat per Capita(log)",
        "scale": {"type": "log", "domain": [2, 180]},
        "axis": {"tickCount": 15}
      },
      "color": {
        "field": "Continent",
        "type": "nominal",
        "scale": {
          "domain": [
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "range": [
            "#D81B60",
            "#1E88E5",
            "#FFC107",
            "#004D40",  
           "#004D40",
            "#8E24AA"
          ]
        },
        "legend": {
          "title": "Continent",
          "titleFontSize": 18,
          "titleFontWeight": "bold",
          "labelFontSize": 15
        }
      },
      "size": {
        "field": "GDP",
        "type": "quantitative",
        "scale": {
          "domain": [1000, 100000],
          "range": [50, 750]
        },
        "legend": {"format": ".2s"}
      },
      "tooltip": [
        {"field": "Entity", "type": "nominal", "title": "Country"},
        {"field": "GDP", "type": "quantitative", "format": ","},
        {"field": "Meat", "type": "quantitative", "format": ","}
      ]
    },
    "params": [
      {
        "name": "Year_selection",
        "value": 2002,
        "bind": {
          "input": "range",
          "min": 2002,
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      },
      {
        "name": "GDP_filter",
        "value": 1000,
        "bind": {
          "input": "range",
          "min": 1000,
          "max": 125000,
          "step": 1000,
          "name": "Min GDP: "
        }
      },
      {
        "name": "Continent_selection",
        "value": "All",
        "bind": {
          "input": "select",
          "options": [
            "All",
            "Africa",
            "Asia",
            "Europe",
            "North America",
            "Oceania",
            "South America"
          ],
          "name": "Select Continent: "
        }
      }
    ],
    "transform": [
      {
        "filter": "datum.Entity != 'Africa' && datum.Entity != 'Asia' && datum.Entity != 'Europe' && datum.Entity != 'North America' && datum.Entity != 'Oceania' && datum.Entity != 'South America'"
      },
      {"filter": "datum.GDP > GDP_filter"},
      {"filter": "datum.Meat > 0"},
      {"filter": "datum.Year == Year_selection"},
      {
        "filter": "Continent_selection == 'All' || datum.Continent == Continent_selection"
      }
    ]
  }
  