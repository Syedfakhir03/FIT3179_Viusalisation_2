{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 800,
  "background": "lightcyan",
  "projection": {
    "type": "naturalEarth1"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_110m_ocean.geojson",
        "format": {"type": "json"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_110m_graticules_30.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#888",
        "strokeWidth": 1.5,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Syedfakhir03/Week-10_HW-/refs/heads/main/js/WorldMapWithGraticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "Data/meat_supply_all_values_2021.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["Value"]
          }
        },
        {
          "calculate": "isValid(datum['Value']) ? datum['Value'] : 0",
          "as": "Consumption"
        },
        {
          "calculate": "datum['Consumption'] > 150 ? 150 : datum['Consumption']",
          "as": "Normalized_Consumption"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1.5},
      "encoding": {
        "color": {
          "field": "Normalized_Consumption",
          "type": "quantitative",
          "title": "Meat Consumption (kg/capita)",
          "scale": {
            "type": "threshold",
            "domain": [0, 30, 60, 90, 120],
            "range": [
              "#ffeda0", "#fed976", "#fd8d3c", "#f03b20", "#bd0026"
            ],
            "clamp": true
          },
          "legend": {
            "title": "Meat Consumption (kg/capita)",
            "titleColor": "black",
            "labelColor": "black",
            "clipHeight": 30,
            "gradientLength": 400,
            "format": ".1f",
            "orient": "bottom",
            "direction": "horizontal",
            "offset": 10,
            "titleLimit": 300,
            "titleFontSize": 16,
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Normalized_Consumption",
            "type": "quantitative",
            "title": "Meat Consumption (kg/capita)",
            "format": ".3f"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "Country": "USA",
            "lat": 37.0902,
            "long": -95.7129,
            "label": "Highest meat\nconsumption\nin the world!",
            "textX": -150,
            "textY": 30
          },
          {
            "Country": "Mongolia",
            "lat": 46.8625,
            "long": 103.8467,
            "label": "Despite being small it's still\none of the top \nconsumers of meat!",
            "textX": 150,
            "textY": 30
          }
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "rule",
            "color": "black",
            "strokeWidth": 1.25
          },
          "encoding": {
            "longitude": {"field": "long", "type": "quantitative"},
            "latitude": {"field": "lat", "type": "quantitative"},
            "longitude2": {"field": "textX", "type": "quantitative"},
            "latitude2": {"field": "textY", "type": "quantitative"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "dx": 6,
            "dy": 4,
            "fontSize": 18,
            "color": "black",
            "lineBreak": "\n"
          },
          "encoding": {
            "longitude": {"field": "textX", "type": "quantitative"},
            "latitude": {"field": "textY", "type": "quantitative"},
            "text": {"field": "label"}
          }
        }
      ]
    }
  ],
  "config": {
    "background": "#121111",
    "title": {"color":"black","fontSize": 24},
    "legend": {
      "titleColor": "#0b0b0b",
      "labelColor": "#101010",
      "orient": "bottom-left"
    }
  },
  "view": {"stroke": null}
}
