{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Meat Consumption Across Countries",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "js/WorldMapWithGraticules.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "Data/Meat_data_Real .csv"
              },
              "key": "LOCATION",
              "fields": ["Value", "SUBJECT"]
            }
          },
          {"calculate": "datum.Value + 0.1", "as": "Consumption"}
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "Consumption",
            "type": "quantitative",
            "title": "Meat Consumption (kg/capita)",
            "scale": {
              "type": "threshold",
              "domain": [10, 15, 25],
              "range": ["#f7d9c4", "#c08574", "#8b3c3b", "#4d191f"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Value", "type": "quantitative", "title": "Consumption (kg/capita)"},
            {"field": "SUBJECT", "type": "nominal", "title": "Type of Meat"}
          ]
        }
      },
      {
        "data": {
          "url": "js/WorldMapWithGraticules.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      }
    ]
  }
  