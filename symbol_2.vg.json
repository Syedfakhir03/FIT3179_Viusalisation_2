{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Meat Consumption Across Countries",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "js/WorldMapWithoutLines.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "Data/Meat_data_Real_1.csv",
        "format": {"type": "csv"}
      },
      "mark": {"type": "geoshape"},
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "Data/Meat_data_Real_1.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["Value"]
          }
        },
        {
          "calculate": "isValid(datum.Value) ? datum.Value + 0.1 : 0",
          "as": "Consumption"
        }
      ],
      "encoding": {
        "color": {
          "field": "Consumption",
          "type": "quantitative",
          "title": "Meat Consumption (kg/capita)",
          "scale": {"type": "log"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Value", "type": "quantitative", "title": "Consumption (kg/capita)"}
        ]
      }
    }
  ]
}
