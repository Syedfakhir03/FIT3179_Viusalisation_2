{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Meat Consumption Across Countries",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "js/WorldMapWithGraticules.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "js/WorldMapWithGraticules.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "Data/Meat_data_Real .csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "Value",
            "type": "quantitative",
            "title": "Consumption (kg/capita)"
          },
          "color": {
            "field": "SUBJECT",
            "type": "nominal",
            "title": "Type of Meat"
          },
          "tooltip": [
            {"field": "LOCATION", "type": "nominal", "title": "Country"},
            {"field": "Value", "type": "quantitative", "title": "Consumption (kg/capita)"},
            {"field": "TIME", "type": "temporal", "title": "Year"},
            {"field": "SUBJECT", "type": "nominal", "title": "Type of Meat"}
          ]
        }
      }
    ]
  }
  